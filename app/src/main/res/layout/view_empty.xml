<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emptyRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_l"
    android:background="@color/md_theme_background">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_primaryContainer">

        <ImageView
            android:id="@+id/emptyIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="30dp"
            android:src="@drawable/ic_empty_state"
            android:contentDescription="@string/empty_icon_desc"
            app:tint="@color/md_theme_primary" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/emptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Photos Yet"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_onBackground"
        android:gravity="center" />

    <TextView
        android:id="@+id/emptyText"
        style="@style/Text.Flickr.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxWidth="280dp"
        android:gravity="center"
        android:textColor="@color/md_text_secondary"
        android:text="@string/empty_default" />
</LinearLayout>